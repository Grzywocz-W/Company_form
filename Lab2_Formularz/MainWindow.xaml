<Window x:Class="Lab2_Formularz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_Formularz"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Imię:"/>
            <TextBox x:Name="tbx_imie" PreviewTextInput="tbx_imie_PreviewTextInput" />

            <Label Content="Nazwisko:"/>
            <TextBox x:Name="tbx_nazwisko" />

            <Label Content="Data urodzenia:"/>
            <DatePicker Name="dp_data" />

            <Label Content="Stanowisko:"/>
            <ComboBox x:Name="cb_stanowisko">
                <!--<ComboBoxItem>Manager</ComboBoxItem>
                <ComboBoxItem>Developer</ComboBoxItem>
                <ComboBoxItem>Assistant</ComboBoxItem>
                <ComboBoxItem>Accountant</ComboBoxItem>-->
            </ComboBox>

            <Label Content="Pensja:"/>
            <TextBox x:Name="tbx_pensja" PreviewTextInput="tbx_pensja_PreviewTextInput"/>

            <Label Content="Rodzaj umowy:"/>
            <RadioButton x:Name="rb_UOP" Content="Umowa o pracę"/>
            <RadioButton x:Name="rb_B2B" Content="B2B"/>
            <RadioButton x:Name="rb_UZ" Content="Umowa zlecenie"/>

            <Button x:Name="btn_dodaj" Content="Dodaj" 
                Background="Green" Foreground="White"
                Margin="0 5 0 5" Click="btn_dodaj_Click"/>

            <Button x:Name="btn_edytuj" Content="Edytuj" 
             Background="LimeGreen" Foreground="White"
             Margin="0 5" Click="btn_edytuj_Click"/>

            <Button x:Name="btn_usun" Content="Usuń" 
             Background="Red" Foreground="White"
             Margin="0 5" Click="btn_usun_Click"/>

            <DockPanel>
            <Button x:Name="btn_zapisz" Content=" Zapisz " 
            Background="DarkBlue" Foreground="White"
            Margin="30 5 30 5" Click="btn_zapisz_Click"/>

             <Button x:Name="btn_wczytaj" Content=" Wczytaj " 
            Background="DarkOrange" Foreground="White"
            Margin="70 5 30 5" Click="btn_wczytaj_Click"/>
            </DockPanel>
        
        </StackPanel>

        <ListBox x:Name="lb_pracownicy" Grid.Column="1" />
    </Grid>
</Window>
